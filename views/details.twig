{% extends 'layout.twig' %}

{% block body %}
<div class="container">
  <div class="row" style="margin-top: 50px;">
    <div class="col-12">
      <h2>Job Details</h2>
      <h3>Status</h3>
      <img src="https://img.shields.io/badge/job-{{status}}-{{status_color}}.svg"/>
    </div>
    <div class="col-12">
      <h3>Log</h3>
      <code>
        <textarea style="width: 100%; height: 600px">
          {{ stdout }}
        </textarea>
      </code>
    </div>
  </div>
</div>
{% endblock %}
